<!DOCTYPE html>
<html>
<head>
  <title>CorporateMessenger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container header">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <nav class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'My Chats', chats_path %></li>
          <li><%= link_to 'My Profile', user_path(current_user) if user_signed_in? %></li>
        </ul>
      </nav>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>

<div class="container">
  <br/>
  <div class="row">
    <div class="col-md-3">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <% if user_signed_in? %>
          <span>Здравствуйте, <%= link_to current_user.email, user_path(current_user) %></span><br/>
          <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>
      <% else %>
          <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
      <% end %>
    </div>
  </div>
  <%= yield %>

</div>
</body>
</html>
