<!DOCTYPE html>
<html>
<head>
  <title>CorporateMessenger</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>
<div>
  <% if user_signed_in? %>
    <div class="col-md-3">
      <div class="col-md-3" style="position: fixed;">
        <div class="row menu" id="header1">
          <div>
            <p>
              <%= link_to 'My profile', user_path(current_user) %>
              <%= link_to 'Sign_out', destroy_user_session_path, :method => :delete, style: "font-size: 16px" %>
            </p>
          </div>
          <div>
            <p><%= link_to 'New Room', new_room_path %></p>
          </div>
        </div>
        <div id="avatar">
          <img src="https://baraholka.leprosorium.ru/static/i/lepra/lepro_logo_mask.png" width="100%" height="100%">
        </div>
        <div class="row menu" id="header2">
          <% current_user.rooms.each do |room| %>
            <%= link_to room_path(room) do %>
              <div class="all-rooms">
                <p><%= room.title %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%= yield %>

  <script type="text/javascript">
    $(document).ready(function(){avatar()});
  </script>
</div>
</body>
</html>
